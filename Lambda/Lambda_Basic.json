{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources":{
        "LambdaExecutionRole":{
            "Type" : "AWS::IAM::Role",
            "Properties" : {
                "RoleName": "MyLambdaRoleBasic",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "LambdaBasicExecutionPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:PutLogEvents",
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject"
                                    ],
                                    "Resource": "arn:aws:s3:::*/*"
                                }
                            ]
                        }
                    }
                ]
            }

        },
        "S3TriggeredLambda":{
            "Type": "AWS::Lambda::Function",
            "Properties":{
                "FunctionName": "S3TriggeredLambdaFunction",
                "Runtime": "python3.12",
                "Handler": "my-lambda-code.lambda_handler",
                "Code": {
                    "S3Bucket": "my-bucket-for-lambda-1", 
                    "S3Key": "my-lambda-code.zip" 
                },
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "MemorySize": 512,
                "Timeout": 60,
                "Environment": {
                "Variables": {
                 "ENV_VAR_1": "value1",
                 "ENV_VAR_2": "value2"
                    }
                }
            }
        },
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
              "BucketName": "dhanu-bucket-1234",
              "NotificationConfiguration": {
                "LambdaConfigurations": [
                    {
                        "Event": "s3:ObjectCreated:*",
                        "Function": {
                            "Fn::GetAtt": [
                                "S3TriggeredLambda",
                                "Arn"
                            ]
                        }
                    }
                ]
            }
            }
          },
        "LambdaPermissionForS3": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "S3TriggeredLambda"
                },
                "Principal": "s3.amazonaws.com",
                "SourceArn": {
                    "Fn::Sub": "arn:aws:s3:::${S3Bucket}"
                }
            }
        }
    }
}